<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="rectangle" >
        <stroke
            android:width="22dp"
            android:color="?background" />
        <corners
            android:radius="0dp"
            />
    </shape>
</item>
<item android:top="5dp" android:right="5dp" android:left="5dp" android:bottom="5dp">
    <shape android:shape="rectangle" >
        <stroke
            android:width="12dp"
            android:color="?background" />
        <corners
            android:radius="50dp"
            />
    </shape>
</item>

<item android:top="16dp" android:right="16dp" android:left="16dp" android:bottom="16dp">

    <shape android:shape="rectangle" >
        <stroke
            android:width="6dp"
            android:color="?colorPrimary" />
        <corners
            android:radius="50dp"
            />
    </shape>
</item>

</layer-list>